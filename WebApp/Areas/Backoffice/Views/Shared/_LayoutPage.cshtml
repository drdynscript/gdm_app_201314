<head>
    @* CHARACTER ENCODING *@
    <meta charset="utf-8">
    @* LATEST VERSION OF RENDERING ENGINE *@
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @* MOST IMPORTANT SEO FRIENDLY TAG *@
    <title>GDM | @ViewBag.Title</title>
    @* OTHER IMPORTANT SEO TAGS *@
	<meta name="description" content="GDM | @ViewBag.Title | @ViewBag.Description">
	<meta name="keywords" content="@ViewBag.Keywords">
	<meta name="author" content="Arteveldehogeschool | Bachelor in de Grafische en Digitale Media" />
	<meta name="copyright" content="Copyright 2010-13 Arteveldehogeschool. All rights reserved.">    
    @* HUMANS = AUTHORS TEXT FILE *@
	<link type="text/plain" rel="author" href="humans.txt">
    @* FAVICON AND TOUCHICONS *@
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/ico/apple-touch-icon-57-precomposed.png">
    <link href="~/Content/ico/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @* MOBILE VIEWPORT = DEVICE WIDTH *@
	<meta name="viewport" content="width=device-width">
    @* FOUNDATION CSS *@
    @Styles.Render("~/Content/bootstrap")
    @* FOUNDATION CSS *@
    @Styles.Render("~/Content/backoffice")
    @* RENDER EXTRA PAGE RELATED CSS AND JS *@
    @RenderSection("head", required: false)
    @* MODERNIZR *@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header">
        <hgroup id="header-logo">
            <h1><a href="~=" title="Backoffice GDM">Backoffice GDM</a></h1>
            <h2>Bachelor in de grafische en digitale media</h2>
        </hgroup>
        <div class="navbar navbar inverse navbar-fixed-top">
            <div class="nabar-inner">
                <div class="container-fluid">
                   <a class="brand" href="~=">Backoffice GDM</a>
                   <nav class="nav-no-collapse">
                       <ul class="nav pull-right">
                           @{Html.RenderPartial("_LoginStatePartial");}
                       </ul>
                   </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="clearfix" id="content-wrapper">
        <aside id="sidebar">
            <header class="header">
                <h3>Menu</h3>
            </header>
            <nav id="main-navigation">
                <ul class="nav nav-list">
                    <li>
                        <a href="charts.html" class="rotateOut">
                            <span class="icon">
                                <i class="icon20 i-stats-up"></i>
                            </span> 
                            <span class="txt">Articles</span> 
                        </a>
                        <ul class="sub">
                            <li>
                                <a href="icons.html">
                                    <span class="icon"><i class="icon20 i-IcoMoon"></i></span>
                                    <span class="txt">All articles</span>

                                </a>
                            </li>
                            <li>
                                <a href="icons.html">
                                    <span class="icon"><i class="icon20 i-IcoMoon"></i></span>
                                    <span class="txt">New Article</span>

                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="charts.html" class="rotateOut">
                            <span class="icon">
                                <i class="icon20 i-stats-up"></i>
                            </span> 
                            <span class="txt">Media</span> 
                        </a>
                        <ul class="sub">
                            <li>
                                <a href="icons.html">
                                    <span class="icon"><i class="icon20 i-IcoMoon"></i></span>
                                    <span class="txt">All media</span>

                                </a>
                            </li>
                            <li>
                                <a href="icons.html">
                                    <span class="icon"><i class="icon20 i-IcoMoon"></i></span>
                                    <span class="txt">New Media</span>

                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="charts.html" class="rotateOut">
                            <span class="icon">
                                <i class="icon20 i-stats-up"></i>
                            </span> 
                            <span class="txt">Categories</span> 
                        </a>
                    </li>
                    <li>
                        <a href="charts.html" class="rotateOut">
                            <span class="icon">
                                <i class="icon20 i-stats-up"></i>
                            </span> 
                            <span class="txt">Comments</span> 
                        </a>
                    </li>
                    <li>
                        <a href="charts.html" class="rotateOut">
                            <span class="icon">
                                <i class="icon20 i-stats-up"></i>
                            </span> 
                            <span class="txt">Users</span> 
                        </a>
                        <ul class="sub">
                            <li>
                                <a href="icons.html">
                                    <span class="icon"><i class="icon20 i-IcoMoon"></i></span>
                                    <span class="txt">All users</span>

                                </a>
                            </li>
                            <li>
                                <a href="icons.html">
                                    <span class="icon"><i class="icon20 i-IcoMoon"></i></span>
                                    <span class="txt">New User</span>

                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="charts.html" class="rotateOut">
                            <span class="icon">
                                <i class="icon20 i-stats-up"></i>
                            </span> 
                            <span class="txt">Roles</span> 
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <div id="content">
            <header class="header">
                <h3>Article</h3>
                @* RENDER BODY *@
                @RenderBody()
            </header>
        </div>
    </div>
    
    @* SCRIPTS AT THE BOTTOM *@
    @* RENDER JQUERY JS *@
    @Scripts.Render("~/bundles/jquery")
    @* RENDER JQUERY JS VAL *@
    @Scripts.Render("~/bundles/jqueryval")
    @* RENDER BOOTSTRAP JS *@
    @Scripts.Render("~/bundles/bootstrap")
    @* RENDER EXTRA PAGE RELATED JS *@
    @RenderSection("scripts", required: false)
</body>
</html>
