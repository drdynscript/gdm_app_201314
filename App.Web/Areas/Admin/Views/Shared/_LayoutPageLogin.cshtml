<!DOCTYPE html>

<html>
<head>
    @* CHARACTER ENCODING *@
    <meta charset="utf-8">
    @* LATEST VERSION OF RENDERING ENGINE *@
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @* MOST IMPORTANT SEO FRIENDLY TAG *@
    <title>GDM | @ViewBag.Title</title>
    @* OTHER IMPORTANT SEO TAGS *@
	<meta name="description" content="@ViewBag.Description">
	<meta name="keywords" content="@ViewBag.Keywords">
	<meta name="author" content="Arteveldehogeschool | Bachelor in de Grafische en Digitale Media">
	<meta name="copyright" content="Copyright 2010-13 Arteveldehogeschool. All rights reserved.">    
    @* HUMANS = AUTHORS TEXT FILE *@
	<link type="text/plain" rel="author" href="~/humans.txt">
    @* FAVICON AND TOUCHICONS *@
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/ico/apple-touch-icon-57-precomposed.png">
    <link href="~/Content/ico/favicon.ico" rel="shortcut icon" type="image/x-icon">
    @* MOBILE VIEWPORT = DEVICE WIDTH *@
	<meta name="viewport" content="width=device-width">
    @* BOOTSTRAP LESS CSS *@
    @Styles.Render("~/Content/bootstrap")
    @* CUSTOM CSS *@
    @Styles.Render("~/Content/adminlogin")
    @* RENDER EXTRA PAGE RELATED CSS AND JS *@
    @RenderSection("head", required: false)
    @* MODERNIZR *@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="login-container">
                <header>
                    <h2>GDM Application</h2>
                </header>
                <section class="login-box">
                    @RenderBody()
                </section>                
            </div>
        </div>
    </div>
    @* RENDER JQUERY JS *@
    @Scripts.Render("~/bundles/jquery")
    @* RENDER JQUERY JS VAL *@
    @Scripts.Render("~/bundles/jqueryval")
    @* RENDER BOOTSTRAP JS *@
    @Scripts.Render("~/bundles/bootstrap")
    @* RENDER EXTRA PAGE RELATED JS *@
    @RenderSection("scripts", required: false)
</body>
</html>
